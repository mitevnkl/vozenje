<div class="container">
  <% if user_signed_in? %>
  <p class="text-muted"><small>Welcome, <%= current_user.name %></small></p>
  <div class="bg-white p-3">
    <%= simple_form_for @post do |f| %>
      <div class="row mb-3 g-3">
        <div class="col-6">
          <%= f.input :post_type, collection: ["Nudam", "Baram"], label: "Baram/Nudam", error: 'Mandatory' %>
        </div>
        <div class="col-6">
          <%= f.input :spaces, collection: ["1", "2", "3", "4"], label: "Mesta broj", error: 'Mandatory' %>
        </div>
      </div>

      <div class="row mb-3 g-3">
        <div class="col-6">
          <%= f.input :from_city, collection: ["Skopje", "Kocani"], label: "Od grad", error: 'Mandatory' %>
        </div>
        <div class="col-6">
          <%= f.input :to_city, collection: ["Skopje", "Kocani"], label: "Do grad", error: 'Mandatory' %>
        </div>
      </div>

      <div class="row mb-3 g-1">
        <div class="col-6">
          <%= f.input :start_time, html5: true, label: "Vreme od", error: 'Mandatory' %>
        </div>
        <div class="col-6">
          <%= f.input :end_time, html5: true, label: "Vreme do", error: 'Mandatory' %>
        </div>
      </div>
      <p class="text-center"><%= f.submit 'Baraj', class: "mt-2 btn btn-lg btn-dark w-100" %></p>
    <% end %>
  </div>
  <% else %>
    <h4 class="my-4"><strong>Welcome to our ride-sharing app!</strong></h4>
    <%= button_to user_facebook_omniauth_authorize_path, class: "btn btn-primary mb-3", data: { turbo: false } do %>
      <p class="m-0"><i class="fa-brands fa-facebook"></i> Continue with Facebook</p>
    <% end %>
    <%= link_to "Terms of service", policy_path %>
  <% end %>
</div>
